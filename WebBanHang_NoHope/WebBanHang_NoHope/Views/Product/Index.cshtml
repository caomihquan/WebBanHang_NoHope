@model PagedList.IPagedList<Model.EF.Product>
@using PagedList.Mvc;
@{ var category = (Model.EF.ProductCategory)ViewBag.Category;
    var listFeatureProducts = (List<Model.EF.Product>)ViewBag.ListFeatureProducts;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layouts.cshtml"; }


<div class="content_top">
    <div class="back-links" style="width:100%">
        <p><a href="/">Trang chủ</a> >> <a href="/san-pham">Sản Phẩm</a></p>
    </div>
    <div class="clear"></div>
</div>
<div class="product-view">
    <div>
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="product-view-top">
                            <div class="row">

                                <div class="col-md-4">
                                    @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                                    {
                                        <br>
                                        <div class="product-search">
                                            <input type="text" value="@ViewBag.SearchString" name="searchString" />
                                            <button type="submit"><i class="fa fa-search"></i></button>
                                        </div>}

                                </div>
                            </div>
                        </div>
                    </div>
                    @foreach (var item in Model)
                    {
                        var link = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                        <div class="grid_1_of_4 images_2_of_4">
                            <a href="@link"><img src="@item.Image" alt="" /></a>
                            <h2>@item.Name</h2>
                            @*<span>@item.CateName</span>*@
                            <div class="price-details">
                                @*<div class="price-number">
                                        <p><span class="rupees">@(item.price.hasvalue ? item.price.value.tostring("n0") : "liên hệ")</span></p>
                                    </div>*@
                                <div class="add-cart">
                                    <h4><a href="@item.Link" style="color:white">Đến Nơi Bán</a></h4>
                                </div>
                                <div class="clear"></div>
                            </div>

                        </div>}
                    <div class="clear"></div>


                </div>

                <div class="col-lg-12" style="color:white">
                    <div class="dataTables_paginate paging_simple_numbers col-md-4" id="dataTable_paginate">
                        <span>Page</span> @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) <Span>of</Span> @Model.PageCount

                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }), new PagedListRenderOptions
                        {
                       LiElementClasses = new List<string> { "page-item" }
                        })
                    </div>
                </div>

                <!-- Pagination Start -->

            </div>

            <!-- Side Bar Start -->



            <div class="rightsidebar span_3_of_1">
                @{ Html.RenderAction("ProductCategory", "Product");}
            </div>

            <!-- Side Bar End -->
        </div>
    </div>
</div>



@model PagedList.IPagedList<Model.EF.Product>
@using PagedList.Mvc;
@{ var category = (Model.EF.ProductCategory)ViewBag.Category;
    var listFeatureProducts = (List<Model.EF.Product>)ViewBag.ListFeatureProducts;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layouts.cshtml"; }



<div class="product-view">
    <div>
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="product-view-top">
                            <div class="row">

                                <div class="col-md-4">
                                    @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                                    {
                        <br>
                                        <div class="product-search">
                                            <input type="text" value="@ViewBag.SearchString" name="searchString" />
                                            <button type="submit"><i class="fa fa-search"></i></button>
                                        </div>}

                                </div>
                            </div>
                        </div>
                    </div>
                    @foreach (var item in Model)
                    {
                        var link = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
        <div class="grid_1_of_4 images_2_of_4">
            <a href="@link"><img src="@item.Image" alt="" /></a>
            <h2>@item.Name</h2>
            @*<span>@item.CateName</span>*@
            <div class="price-details">
                <div class="price-number">
                    <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")</span></p>
                </div>
                <div class="add-cart">
                    <h4><a href="/gio-hang/@item.ID">Thêm vào giỏ</a></h4>
                </div>
                <div class="clear"></div>
            </div>

        </div>}
                    <div class="clear"></div>


                </div>



                <!-- Pagination Start -->
                <div class="col-md-12">
                    @if (ViewBag.TotalPage > 1)
                    {
                        var pageDisplay = (int)ViewBag.MaxPage;
                        int totalPage = (int)ViewBag.TotalPage;
                        int currentPage = ((int)ViewBag.Page);

                        // Create numeric links
                        var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                        var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

                        var link = "/san-pham/" + category.MetaTitle + "-" + category.ID;
        <nav>
            <ul class="pagination">
                @if (currentPage > ViewBag.First)
                {
<li><a href="@link?page=@ViewBag.First" title="Trang đầu" class="first"><i class="fa fa-angle-double-left"></i></a></li>
                    <li>
                        <a href="@link?page=@ViewBag.Prev" title="Trang trước" class="prev"><i class="fa fa-angle-left"></i></a>
                    </li>}
                @for (int i = startPageIndex; i <= endPageIndex; i++)
                {
                    if (currentPage == i)
                    {

<li> <a href="@link?page=@i" class="active" title="Trang @i">@i</a></li> }
                    else
                    {
<li><a href="@link?page=@i" title="Trang @i" class="pos">@i</a></li>}
                }
                @if (currentPage < totalPage)
                {
<li><a href="@link?page=@ViewBag.Next" class="next" title="Trang sau"><i class="fa fa-angle-right"></i></a></li>
                    <li> <a href="@link?page=@ViewBag.Last" class="last" title="Trang cuối"><i class="fa fa-angle-double-right"></i></a></li>}

            </ul>
        </nav> }
    else
    {
<span>Đã là trang cuối</span>}
                </div>
                <!-- Pagination Start -->
            </div>

            <!-- Side Bar Start -->



            <div class="rightsidebar span_3_of_1">
                @{ Html.RenderAction("ProductCategory", "Product");}
            </div>

            <!-- Side Bar End -->
        </div>
    </div>
</div>



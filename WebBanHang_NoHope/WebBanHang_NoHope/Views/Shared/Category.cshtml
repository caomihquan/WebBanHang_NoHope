@model List<Model.EF.Category>
<h3 style="color:#fff;background:#4facfe;width:100%;text-align:center;padding:10px;">Danh Mục Tin Tức</h3>
<ul class="navbar-nav">

    @foreach (var item in Model.Where(x => x.ParentID == null))
    {
        var child = Model.Where(x => x.ParentID == item.ID);
        var parentClass = child.Count() > 0 ? "class=dropdown-toggle data-toggle=dropdown" : "";
        <li class="dropdown">
            <a class="nav-link" href="/danh-muc/@item.MetaTitle-@item.ID" @parentClass title="@item.Name">@item.Name</a>
            @if (child.Count() > 0)
            {

                <ul class="dropdown-menu" style=" border: none;">
                    @foreach (var childItem in child)
                    {
                        <li title="@childItem.Name"><i class="fas fa-caret-right"></i><a href="/danh-muc/@childItem.MetaTitle-@childItem.ID">@childItem.Name</a></li>
                    }

                </ul>


            }
        </li>
    }


</ul>


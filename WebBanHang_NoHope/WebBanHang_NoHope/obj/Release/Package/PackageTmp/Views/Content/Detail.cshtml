@model Model.EF.Content
@{
    ViewBag.Title = Model.Name;
    ViewBag.Keywords = Model.MetaKeywords;
    ViewBag.Descriptions = Model.MetaDescriptions;
    Layout = "~/Views/Shared/_Layouts.cshtml";
    var listRelatedContents = (List<Model.EF.Content>)ViewBag.RelatedContents;
}

<!-- Go to www.addthis.com/dashboard to customize your tools -->
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-616a4b481dde4c91"></script>

<nav style="padding:20px;">
    <span><a href="/"><i class="fas fa-home"></i> Trang Chủ</a> / <a href="/tin-tuc">Tin Tức</a></span>
</nav>
<div class="product-view">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="content">
                    <h1 style="font-size:30px;">@Model.Name</h1>
                    <div style="font-size:12px;padding:10px;">
                        <h6>@Model.CreatedDate<span> by: <a href="#">@Model.CreatedBy</a></span></h6>
                    </div>
                    <p style="font-size:20px;color:#000;padding: 0 0 20px 0">@Model.Description</p>
                    <div style="padding: 0px 0 50px 0px; line-height: 25px; color: #494747;">@Html.Raw(Model.Detail)</div>
                    <div class="heading">Bài Viết Liên Quan</div>
                    <br />
                    @foreach (var item in listRelatedContents)
                    {
                        var link = "/chi-tiet-bao" + item.MetaTitle + "-" + item.ID;

                        <a href="@link" style="display:flex;padding: 10px 0 10px 0px;border-top: 1px solid rgba(34,34,34,.1);text-decoration:none;">
                            <span><img src="@item.Image" alt="@item.Name" style="height:93px;width:150px;" /></span>
                            <div style="margin-left:20px;">

                                <h1 style="font-size:25px;color:#000;">@item.Name</h1>
                                <p style="color:darkgrey">@item.Description</p>

                            </div>
                        </a>



                    }
                    <ul style="display: flex;border-top: 1px solid rgba(34,34,34,.1);padding:30px;">


                        <li style="list-style-type: none;"><i class="fas fa-tag"></i>Từ Khóa:  </li>
                        @{

                            var tags = (List<Model.EF.Tag>)ViewBag.Tags;
                            foreach (var tag in tags)
                            {
                                <li style="list-style-type: none;">-<a style="color:grey" href="/tag/@tag.ID">@tag.Name</a> </li>
                            }
                        }
                    </ul>
                </div>

            </div>
            <div class="rightsidebar span_3_of_1">
                @{ Html.RenderAction("Category", "Content");}
                
            </div>
        </div>


    </div>
</div>
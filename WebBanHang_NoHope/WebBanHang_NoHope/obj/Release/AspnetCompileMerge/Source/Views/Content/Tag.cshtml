@model IEnumerable<Model.EF.Content>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layouts.cshtml";
    var listTag = (List<Model.EF.Tag>)ViewBag.Tags;
    var tag = (Model.EF.Tag)ViewBag.Tag;

}

<div class="content_top">
    <div class="back-links" style="width:100%">
        <p><a href="/">Trang chủ</a> >> <a href="/tin-tuc">Tin Tức</a></p>
    </div>
    <div class="clear"></div>
</div>

<div class="product-view">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="product-view-top">
                            <div class="row">
                                <div class="col-md-4">

                                    <div class="product-search">

                                        <h5>Tag: @tag.Name</h5>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 ">
                        <div class="product-view-top">
                            @foreach (var item in Model)
                            {
                                var link = "/chi-tiet-bao" + item.MetaTitle + "-" + item.ID;
                                <div class="row" style="padding:15px; border-top:1px solid #b9b8b8">


                                    <div class="col-lg-4">
                                        <a href="@link"><img src="@item.Image" style="width:100%" alt="@item.MetaKeywords"></a>
                                    </div>
                                    <div class="col-lg-8">
                                        <a href="@link"> <h3>@item.Name</h3></a>
                                        <h4>@item.CreatedDate<span>  by:  <a href="#">@item.CreatedBy</a></span></h4>
                                        <p style="color:#808080">@item.Description <a href="@link" title="more">[....]</a></p>
                                    </div>

                                </div>
                            }

                            @if (ViewBag.TotalPage > 1)
                            {
                                var pageDisplay = (int)ViewBag.MaxPage;
                                int totalPage = (int)ViewBag.TotalPage;
                                int currentPage = ((int)ViewBag.Page);

                                // Create numeric links
                                var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                                var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

                                var link = "/tag/" + tag.ID;
                                <nav>
                                    <ul class="pagination">
                                        @if (currentPage > ViewBag.First)
                                        {
                                            <li><a href="@link?page=@ViewBag.First" title="Trang đầu" class="first"><i class="fa fa-angle-double-left"></i></a></li>
                                            <li>
                                                <a href="@link?page=@ViewBag.Prev" title="Trang trước" class="prev"><i class="fa fa-angle-left"></i></a>
                                            </li>

                                        }
                                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                                        {
                                            if (currentPage == i)
                                            {

                                                <li> <a href="@link?page=@i" class="active" title="Trang @i">@i</a></li>
                                            }
                                            else
                                            {
                                                <li><a href="@link?page=@i" title="Trang @i" class="pos">@i</a></li>
                                            }
                                        }
                                        @if (currentPage < totalPage)
                                        {
                                            <li><a href="@link?page=@ViewBag.Next" class="next" title="Trang sau"><i class="fa fa-angle-right"></i></a></li>
                                            <li> <a href="@link?page=@ViewBag.Last" class="last" title="Trang cuối"><i class="fa fa-angle-double-right"></i></a></li>
                                        }

                                    </ul>
                                </nav>

                            }
                        </div>

                    </div>
                </div>

                <!-- Pagination Start -->
                <!-- Pagination Start -->
            </div>

            <!-- Side Bar Start -->
            <div class="rightsidebar span_3_of_1">
                @{ Html.RenderAction("Category", "Content");}
                <div class="clear"> </div>
                <div>
                    <h2 class="title">Tags</h2>
                    @foreach (var item in listTag)
                    {
                        <a href="/tag/@item.ID">@item.Name</a>
                    }

                </div>
            </div>
            <!-- Side Bar End -->
        </div>
    </div>
</div>
